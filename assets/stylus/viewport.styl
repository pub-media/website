
// hide-at-first scenario
.content-block, .content-block.below-viewport
  opacity 0
  .content-block-title
    opacity 0
    .copy
      opacity 0
  .content-block-copy
    p
      opacity 0
  .content-block-icon
    opacity 0
  .content-block-icon-title
    opacity 0
  .content-block-icon-copy
    opacity 0


.content-block-highlight, .content-block-highlight.below-viewport
  opacity 0
  .copy
    opacity 0

.cta, .cta.below-viewport
  opacity 0
  .copy
    opacity 0

// transitions and delay
.content-block
  transition opacity 1s ease-in-out 0s
  .content-block-title
    transition opacity 1s ease-in-out 0.4s
    .copy
      transition opacity 1s ease-in-out 0.6s
  .content-block-copy
    p
      transition opacity 1s ease-in-out 0.6s
    p:nth-child(2)
      transition opacity 1s ease-in-out 0.8s

  .content-block-icon
    transition opacity 1s ease-in-out 0.4s
  .content-block-icon-title
    transition opacity 1s ease-in-out 0.6s
  .content-block-icon-copy
    transition opacity 1s ease-in-out 0.8s

.content-block-highlight
  transition opacity 1s ease-in-out 0s
  .copy
    transition opaciyt 1s ease-i-out 0.4s

.cta
  transition opacity 1s ease-in-out 0.4s
  .copy
    transition opacity 1s ease-in-out 0.8s

// state inside viewport
.content-block.in-viewport, .content-block.above-viewport
  opacity 1
  .content-block-title
    opacity 1
    .copy 
      opacity 1
  .content-block-copy
    p
      opacity 1

  .content-block-icon
    opacity 1
  .content-block-icon-title
    opacity 1
  .content-block-icon-copy
    opacity 1

.content-block-highlight.in-viewport, .content-block-highlihgt.above-viewport
  opacity 1
  .copy
    opacity 1

.cta.in-viewport, .cta.above-viewport
  opacity 1
  .copy
    opacity 1
